{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "strict": true,
        "jsx": "react",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
